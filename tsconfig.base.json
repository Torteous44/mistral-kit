{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@mistral/ui": ["packages/ui/src"],
      "@mistral/ui/*": ["packages/ui/src/*"],
      "@mistral/ui/server": ["packages/ui/src/server"],
      "@mistral/ui/next/api/*": ["packages/ui/src/next/api/*"]
    },
    "types": ["node"]
  }
}
