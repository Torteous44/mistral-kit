{
  "name": "@matthewporteous/mistral-kit",
  "version": "0.0.7",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./clients/mistral": {
      "import": "./dist/clients/mistral.js",
      "types": "./dist/clients/mistral.d.ts"
    },
    "./next/api/chat": {
      "import": "./dist/next/api/chat.js",
      "types": "./dist/next/api/chat.d.ts"
    },
    "./next/api/embeddings": {
      "import": "./dist/next/api/embeddings.js",
      "types": "./dist/next/api/embeddings.d.ts"
    },
    "./next/api/upload-text": {
      "import": "./dist/next/api/upload-text.js",
      "types": "./dist/next/api/upload-text.d.ts"
    },
    "./next/api/weather": {
      "import": "./dist/next/api/weather.js",
      "types": "./dist/next/api/weather.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "mistral-kit": "./bin/mistral-kit.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/server.ts src/clients/mistral.ts src/next/api/chat.ts src/next/api/embeddings.ts src/next/api/upload-text.ts src/next/api/weather.ts --format=esm --dts --clean",
    "dev": "tsup src/index.ts src/server.ts src/clients/mistral.ts src/next/api/chat.ts src/next/api/embeddings.ts src/next/api/upload-text.ts src/next/api/weather.ts --format=esm --dts --watch",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.553.0",
    "pdf-parse": "^1.1.4",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "20",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.0.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.8",
    "@types/pdf-parse": "^1.1.5"
  }
}
